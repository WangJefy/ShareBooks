<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="116dp"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="12dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_touxiang"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/touxiang"
        app:civ_border_color="#000000"
        app:civ_border_width="1.2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="104dp"
        android:layout_marginTop="6dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="啦啦啦啦 我是测试的小当家" />

            <ImageView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                tools:src="@drawable/male" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:layout_marginStart="4dp"
            >
            <TextView
                android:id="@+id/tv_contri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="贡献书籍:3"
                android:textSize="11sp"
                android:textColor="?android:textColorSecondary"
                android:layout_marginEnd="4dp"
                />
            <TextView
                android:id="@+id/tv_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="交易书籍:7"
                android:textSize="11sp"
                android:textColor="?android:textColorSecondary"
                android:layout_marginEnd="4dp"
                />
            <TextView
                android:id="@+id/tv_bookNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="书摊书籍数量:7"
                android:textSize="11sp"
                android:textColor="?android:textColorSecondary"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_bookListNames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="1dp"
            android:textSize="11sp"
            android:textColor="?android:textColorSecondary"
            android:maxLines="2"
            android:ellipsize="end"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="1dp"
            android:textSize="11sp"
            android:textColor="?android:textColorSecondary"
            tools:text="书摊介绍:"
            android:text="@string/s_sellstalldes"
            />
        <TextView
            android:id="@+id/tv_sellstalldescri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textSize="11sp"
            android:textColor="?android:textColorSecondary"
            tools:text="@string/s_neitontest"
            android:maxLines="2"
            android:ellipsize="end"
            />
    </LinearLayout>




</android.support.v7.widget.CardView>