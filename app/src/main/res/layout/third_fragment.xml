<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_300"
    tools:context=".ui.activity.MainActivity">
    <android.support.v7.widget.CardView
        android:layout_marginTop="18dp"
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="4dp"
        >
        <ImageView
            tools:src="@drawable/touxiang"
            android:id="@+id/myImage"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_marginTop="6dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="6dp"
            />
        <LinearLayout
            android:layout_marginStart="95dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:padding="3dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="13dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/mynickname"
                    android:textStyle="bold"
                    tools:text="Infinite"
                    android:text="Infinite"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="17sp"
                    android:lines="1"
                    android:ellipsize="end"
                    />
                <ImageView
                    android:id="@+id/sex"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="4dp"
                    tools:src="@drawable/female"
                    android:src="@drawable/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/myuserName"
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textSize="12sp"
                tools:text="用户名:123456789"
                android:text="用户名:123456789"
                />

            <LinearLayout
                android:padding="3dp"
                android:orientation="horizontal"
                android:layout_marginStart="6dp"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/mycontri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    tools:text="贡献书籍:0"
                    android:text="贡献书籍:0"
                    />
                <TextView
                    android:id="@+id/myget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textSize="12sp"
                    tools:text="交易书籍:0"
                    android:text="交易书籍:0"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:background="@color/color_white"
        android:id="@+id/my_lib"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/local_library"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@string/s_mylib"
            android:textColor="@color/thirdfragmenttextcolor"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:background="@color/color_white"
        android:id="@+id/my_donate"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:foreground="?android:attr/selectableItemBackground"
        >

        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/zoom_out" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@string/s_donate"
            android:textSize="14sp"
            android:textColor="@color/thirdfragmenttextcolor"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/gotta_book"
        android:gravity="center_vertical"
        android:foreground="?android:attr/selectableItemBackground"
        >
        <ImageView
            android:scaleType="centerCrop"
            android:layout_marginStart="15dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/obtain_img"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/thirdfragmenttextcolor"
            android:layout_marginStart="15dp"
            android:text="@string/s_getbook"
            />
    </LinearLayout>

    
    <LinearLayout
        android:id="@+id/order_book"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:foreground="?android:attr/selectableItemBackground"
            >
        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/bookmark"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/thirdfragmenttextcolor"
            android:layout_marginStart="15dp"
            android:text="@string/s_orbook"
            />
    </LinearLayout>

</LinearLayout>